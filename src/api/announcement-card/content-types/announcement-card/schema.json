{
  "kind": "collectionType",
  "collectionName": "announcement_cards",
  "info": {
    "singularName": "announcement-card",
    "pluralName": "announcement-cards",
    "displayName": "Announcement Card"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "titleAr": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "string",
      "required": true
    },
    "messageAr": {
      "type": "string",
      "required": true
    },
    "link": {
      "type": "string",
      "required": true
    },
    "linkAText": {
      "type": "string",
      "required": true
    },
    "cardType": {
      "type": "enumeration",
      "required": true,
      "default": "announcementCard",
      "enum": [
        "dealCard",
        "announcementCard",
        "contentCard",
        "recommendedBrandCard"
      ]
    },
    "feedType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "home",
        "deals",
        "wallet"
      ]
    },
    "messageApiId": {
      "type": "string",
      "required": true
    },
    "messageName": {
      "type": "string",
      "required": true
    },
    "analyticsName": {
      "type": "string",
      "required": true
    },
    "ctaEn": {
      "type": "string",
      "required": true
    },
    "ctaAr": {
      "type": "string",
      "required": true
    },
    "backgroundColor": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "targeting_rules": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::targeting-rule.targeting-rule",
      "inversedBy": "announcement_cards"
    },
    "ctaBackgroundTextColor": {
      "type": "string",
      "required": true
    },
    "campaignName": {
      "type": "string",
      "required": true
    },
    "card_tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::card-tag.card-tag",
      "inversedBy": "announcement_cards"
    },
    "pin_card": {
      "type": "boolean",
      "default": false
    }
  }
}
